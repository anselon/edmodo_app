<div class="row">

	<%= form_tag products_path, :method => :get do %>
	  <div class="form-group">
	  	<div class="search-bar col-sm-10">
	  		<%= text_field_tag :search, params[:search], class: 'form-control', placeholder: 'Subject, Lesson, or Activity' %>
	  	</div>

	  	<%= submit_tag "Search", :name => nil, class: 'btn btn-primary col-xs-2' %>

	</div>
	<% end %>
</div>

